CREATE TABLE IF NOT EXISTS jenre(
	id SERIAL PRIMARY KEY,
	name VARCHAR(40)
);

CREATE TABLE IF NOT EXISTS artist(
	artistId int PRIMARY KEY,
	album_id integer NOT NULL REFERENCES album(id),
	name VARCHAR(40)
);

CREATE TABLE IF NOT EXISTS track(
	trackId int PRIMARY KEY,
	name VARCHAR(60) NOT NULL,
	album_id integer NOT NULL REFERENCES Album(id),
	duration TIMESTAMP(600) NOT NULL
);

CREATE TABLE IF NOT EXISTS album(
	id SERIAL PRIMARY KEY,
	trackId integer NOT NULL REFERENCES track(id),
	artistId integer NOT NULL REFERENCES artist(id),
	name VARCHAR(40) NOT NULL,
	released date(2008-01-01)
);

CREATE TABLE IF NOT EXISTS	albumartist(
	albumid int NOT NULL REFERENCES album (id),
	artistid int NOT NULL REFERENCES artist (id),
	CONSTRAINT aa PRIMARY KEY (albumid, artistid)
);

CREATE TABLE IF NOT EXISTS compilation(
	trackId integer PRIMARY KEY REFERENCES track (trackId),
	name VARCHAR(60) unique,
	released date
);

CREATE TABLE IF NOT EXISTS jenreartist(
 	artistId integer NOT NULL REFERENCES artist(id),
	jenreId integer NOT NULL REFERENCES jenre(id),
	CONSTRAINT ja PRIMARY KEY (jenreId, artistId)
);
